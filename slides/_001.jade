                code(data-trim).
                    #include <stdio.h>  /* printf */
                    #include <stddef.h> /* size_t */
                    #include <stdlib.h> /* EXIT_SUCCESS */

                    int main (void)
                    {
                        size_t i;
                        int    array[] = {1, 1, 2, 3, 5, 8, 13, 21};

                        for (i=0; i<(sizeof array/sizeof(int)); i++)
                        {
                            printf("The next number is: %2d\n", array[i]);
                        }
                        
                        return EXIT_SUCCESS;
                    }
